<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Location" table="employee">
        <meta attribute="class-description">
            This class contains the location detail.
        </meta>
        <id name="locid" type="int" column="locId">
            <generator class="native"/>
        </id>
        <property name="city" column="city" type="string"/>
        <property name="postalCode" column="postalCode" type="string"/>
        <property name="metroCode" column="metroCode" type="string"/>
        <property name="areaCode" column="areaCode" type="string"/>
        <property name="latitude" column="latitude" type="double"/>
        <property name="longitude" column="longitude" type="double"/>
    </class>
</hibernate-mapping>